{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react",
        "plugin:flowtype/recommended"
    ],
    "plugins": ["prettier", "flowtype", "flow-vars"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "linebreak-style": 0,
        "eslint linebreak-style": [0, "error", "windows"],
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": ["Link"],
                "specialLink": ["hrefLeft", "hrefRight", "to"],
                "aspects": ["noHref", "invalidHref", "preferButton"]
            }
        ],
        "flowtype/define-flow-type": 1,
        "flowtype/use-flow-type": 1
    }
}
